<% layout('layout/boilerplate') -%>
<section>
  <div class="container py-2">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% for (const product of products) { %>
      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-img-container overflow-hidden">
            <img
              src="<%= product.img %>"
              class="card-img-top img-fluid"
              alt="<%= product.name %>"
              style="height: 200px; object-fit: cover"
            />
          </div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-center fw-bold"><%= product.name %></h5>
            <p class="card-text text-center text-muted"><%= product.desc %></p>
            <h5 class="card-title text-center text-success">
              &#8377; <%= product.price %>
            </h5>
            <a
              href="/products/<%= product._id %>"
              class="btn btn-dark btn-sm mt-auto"
              >Buy Now</a
            >
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
